<h1>Create a new campaign</h1>

<%= form_for @campaign, url: campaigns_path, html: { multipart: true } do |f| %>
  <%= f.label :profile_picture %>
  <%= f.file_field :profile_picture %><br />
  
  <%= f.label :first_name %>
  <%= f.text_field :firstname %><br />

  <%= f.label :last_name %>
  <%= f.text_field :lastname %><br />

  Optional: <%= f.label :preferred_name %>
  <%= f.text_field :preferred_name %><br />

  <%= f.label :state %>
  <%= f.select :state, STATES %><br />

  <%= f.label :city %>
  <%= f.text_field :city %><br />

  <%= f.label :instrument %>
  <%= f.text_field :instrument %><br />

  <%= f.label :target_amount %>
  <%= f.number_field :target_amount %><br />

  <%= f.label :age %>
  <%= f.number_field :age %><br />

  <%= f.label :bio %>
  <%= f.text_area :bio %><br />

  <%= f.submit "Start" %>
<% end %>
