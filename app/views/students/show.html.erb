<div class='container'>
  <div class='page-header'>

    <h1><%= current_student.email %></h1>
  </div>

  <div class='linking'><%= link_to 'Edit Profile', edit_student_registration_path %></div>

  <p class="alert alert-info">We are currently in beta-testing. If you would like to start a project with us please <a href='<%= contact_url %>'>contact us</a></p>

  <!-- <div class='linking'><a href='<%= new_campaign_path %>'>Create a new campaign here</a></div> -->

  <h3>Campaigns:</h3>

  <div class='row'>
    <% current_student.campaigns.each do |c| %>
      <div class='col-xs-6 col-sm-3 col-md-2'>
        <a class='img-profile-link' href='<%= campaign_path c%>'><%= image_tag c.profile_picture.url :thumb, :class => 'img-responsive img-rounded', :alt => 'Profile Picture' %>
          <p>Title: <%= c.title %></p>
        </a>
      </div>
    <% end %>
  </div>
</div>

