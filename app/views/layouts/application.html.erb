<!DOCTYPE html>
<html>
  <head>
    <title>Project Muses</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "https://js.stripe.com/v1/" %>
    <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY %>
    <%= yield :head %>
    <meta name='viewport' content='width=device-width, initial-scale=1.0'>
  </head>
  <body>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">		
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand logo" href='<%= root_path %>'><img src="/branding/logo_navbar.png" alt="Project Muses"></a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <!-- <li><%= link_to 'Landing', root_path %></li> -->
          <li <% if request.path==campaigns_path %>class="active"<% end %>><%= link_to 'Muses',campaigns_path %></li>
          <li <% if request.path==muses_sign_up_path %>class="active"<% end %>><% if student_signed_in? %>
            <%= link_to 'Profile', student_path(current_student) %>
          <% else %>
            <%= link_to 'Become a Muse', muses_sign_up_path %></li>
          <% end %>
          <li <% if request.path==messengers_sign_up_path %>class="active"<% end %>><% if donor_signed_in? %>
            <%= link_to 'Profile', donor_path(current_donor) %> 
          <% else %>
            <%= link_to 'Become a Donor', messengers_sign_up_path %>
          <% end %></li>
          <li <% if request.path==donors_path %>class="active"<% end %>><%= link_to 'Donors', donors_path %></li>
          <li <% if request.path==contact_path %>class="active"<% end %>><%= link_to 'Contact Us', contact_path %></li>
          <% unless student_signed_in? or donor_signed_in? %>
            <li <% if request.path==sign_in_path %>class="active"<% end %>><%= link_to 'Login', sign_in_path %></li>
          <% else %>
            <li <% if request.path==sign_out_path %>class="active"<% end %>><%= link_to 'Logout', sign_out_path %></li>
          <% end %>
          <li <% if request.path==demo_path %>class="active"<% end %>><%= link_to 'Sample Muse Sign-Up', demo_path %></li>
          <!-- Change this conditional to take advantage of polymorphism or exhibits? -->
        </ul>
      </div>
    </div>
    </nav>
    <% flash.each do |key, value| %>
      <div class='flash <%= key %>'><%= value %></div>
    <% end %>
    <%= yield %>
  </body>
</html>
