<div class='container'>
  <div class='row'>
    <div class='col-md-8'>
      <h1 class='page-header'>Contact Us</h1>
      <%= form_tag '/contact-us', :class => 'form-horizontal', :role => 'form' do %>

        <div class='form-group'>
          <%= label_tag 'first_name', nil, :class => 'col-sm-2 control-label'%>
          <div class='col-sm-10'>
            <%= text_field_tag 'first_name', nil, :class => 'form-control', :required => '' %>
          </div>
        </div>

        <div class='form-group'>
          <%= label_tag 'last_name', nil, :class => 'col-sm-2 control-label'%>
          <div class='col-sm-10'>
            <%= text_field_tag 'last_name', nil, :class => 'form-control', :required => '' %>
          </div>
        </div>

        <div class='form-group'>
          <%= label_tag 'email', nil, :class => 'col-sm-2 control-label'%>
          <div class='col-sm-10'>
            <%= email_field_tag 'email', nil, :class => 'form-control', :required => '' %>
          </div>
        </div>

        <div class='form-group'>
          <%= label_tag 'question', nil, :class => 'col-sm-2 control-label'%>
          <div class='col-sm-10'>
            <%= text_area_tag 'question', nil, :class => 'form-control', :rows => '5', :placeholder => 'Question/Comment here', :required => '' %>
          </div>
        </div>

        <div class='form-group'>
          <div class='col-sm-offset-2 col-sm-10'>
            <%= submit_tag 'Send', :class => 'btn btn-default btn-success', :action => 'submit_comment', data: {:disable_with => 'Please Wait...'} %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
